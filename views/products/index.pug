extends ../layouts/common.pug

block content
	h1 products
	.d-flex.align-items-center
		a.btn.btn-primary(href="/products/create") news
		form.ml-auto(action ="/products/search", methos="GET", class="d-flex")
			input(type="text", name="q", class="form-controlle")
			button(class="btn btn-primary ml-2") Search		

	.container
		.row
			each product in products
				.col-sm-3(style="padding: 25px;")
					img(src= product.image, style="width:100%;")
					p= product.name
					p= product.description
					p= product.price
					a.btn(href="/cart/add/" + product.id) Add to cart
				
			



